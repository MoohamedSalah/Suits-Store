@model Suites.Entities.Prodect

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Prodects", FormMethod.Post, new { @id="createProduct"}))
{
    @Html.AntiForgeryToken()

