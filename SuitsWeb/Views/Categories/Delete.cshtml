@model Suites.Entities.Category

@{
    ViewBag.Title = "Delete";

    var imageURL = !string.IsNullOrEmpty(Model.ImageURL) ? Model.ImageURL : "/modaz-Style/images/placeholder-image.png";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ISFeatcher)
        </dt>
        @if (Model.ISFeatcher)
        {
            <dd>
                <text> True</text>
            </dd>

        }
        else
        {
            <dd>
                <text> False</text>
            </dd>
        }

        <dd>
            <div class="col-3">
                <div class="thumb">
                    <img src="@imageURL" class="img-thumbnail img-fluid" id="categoryImage" />
                </div>
            </div>
        </dd>


    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-success " /> |
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning " })
        </div>
    }
</div>
